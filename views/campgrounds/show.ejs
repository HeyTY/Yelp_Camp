<% include ../partials/header%>


<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelpcamp</p>
			<div class="list-group">
				<li class="list-group-item active">
				<p>Summary: <%=weatherResults.summary%></p>
				<p>Temperate: <%=weatherResults.current%></p>
				<p>Feels like: <%=weatherResults.actual%></p>

				</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
				<li class="list-group-item"></li>
			</div>

			<div>
				<iframe 
				title="GoogleMaps"
				width="100%"
				height="350"
				frameborder="0"
				scrolling="0"
				marginheight="0"
				marginwidth="0"
				src="https://maps.google.com/maps?q=<%= campground.location %>&amp;z=11&amp;output=embed">
				</iframe>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image%>">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campground.price %>/night</h4>
					<h4> <a href=""><%= campground.name%></a></h4>
					<p><%= campground.description%></p>
					<p><%=campground.location%></p>
					

				
					<p>
						<em>Submitted By:  <%= campground.author.username%></em>	
					</p>
					
					<% if (currentUser && campground.author.id.equals(currentUser._id)){%>		
						<a href="/campgrounds/<%= campground._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
						<form id="delete-form" action="/campgrounds/<%= campground._id%>/?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
					<% } %>

				</div>

			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username%></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text%>
							</p>
							
						<% if (currentUser && comment.author.id.equals(currentUser._id)) { %>	
							<a class="btn btn-xs btn-warning" 
							href="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>/edit">Edit</a>
							<form id="delete-form" action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>

						<% } %>
						</div>
					</div>
				<%})%>
			</div>
		</div>
	</div>
</div>






<a href="/campgrounds">Back</a>

<% include ../partials/footer%>
